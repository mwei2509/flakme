<div style="height:100% !important; display: table !important; padding-left:0 !important;" class="col-md-3 nopadding">
<%= render 'layouts/sidebar' %>
</div>

<div class="col-md-9" style="height:100%; padding:0;">
  <div id="chatroom-title">
    <h1>Chatrooms</h1>
  </div>


  <div style="text-align:center;bottom:0 !important;top:0 !important;" class="main">
    <h1>Select a Group to Start Chatting</h1>
    <p style="text-align:center;"><img src="data:image/svg+xml;utf8;base64," width="200" height="200" /></p>
  </div>



  <div class="row" id="chatrooms">
      <ul id="chatroom-index">
    <% if @chatrooms.any? %>
        <li><%= render @chatrooms%></li>
    <%else %>
      </ul>
      <p>Be the first one to make a chatroom!</p>
    <% end %>
  </div>
</div>