<div class="container">
  <%if current_user%>
  	<div class="alert alert-success alert-dismissable">
	  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
	  Nice to see you, <strong><%= current_user.username%></strong>
	</div>
  <% else %>
  	<div class="alert alert-success alert-dismissable">
	  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
	  <strong>Sign up or log in, </strong>then create a group or browse existing rooms to start chatting.
	</div>
	    <div style="margin-top:100px;" class="">
		    <div class="card"></div>
		    <div class="card">
		  		<%= form_for(User.new, url: login_path) do |f| %>
		      	<%=f.label :username%>
			    	<div class="input-group">
			        	<span class="input-group-addon">@</span>
			        	<%= f.text_field :username, class: "form-control"%>
			      	</div>
			      	<div class="actions">
			        	<%= f.submit "log in", class: "btn btn-primary" %>
			      	</div>
		    	<% end %>
		    </div>
			<div>
		      	<ul id="chatroom-index">
		    		<% if @chatrooms.any? %>
		        		<li><%= render @chatrooms%></li>
		    		<%else %>
		      	</ul>
		      	<p>Be the first one to make a chatroom!</p>
		    	<% end %>
		  	</div>	    
		</div>
  <%end%>
	<div style="height:100%;bottom:0 !important; position:relative; margin-top:0;background-color:#F8F8F8;">
	  <div style="text-align:center !important;">
	    <h1 class="flakme title"><span style="color:#CB32D1;font-weight:900;">f<span style="color:#343AD1;font-weight:900;">l</span><span style="color:#32AED1;font-weight:900;">a</span><span style="color:#4BD147;font-weight:900;">k</span><span style="color:#9AD527">.</span><span style="color:#FBD806">m</span><span style="color:#E08C27">e</span></h1>

		<div class="ribbon-top"></div>
	    <p class="chatapp-bio">Just anothe chat app.</p>
	  </div>
	  <div class="container">
	    <div class="intro">
	        <!-- End Import -->
	        <div style="margin-top:100px;" class="container">
	          <div class="card"></div>
	          <div class="card">
	            <h1 class="title">Sign Up</h1>
	            <form action="/signup" method="POST" id="signup">
	              <div class="input-container">
	                <input type="text" id="#{label}" required="required" name="username">      
	                <label for="#{label}">Username</label>
	                <div class="bar"></div>
	              </div>
	              <div class="input-container">
	                <input type="password" id="#{label}" required="required"  name="password">
	                <label for="#{label}">Password</label>
	                <div class="bar"></div>
	              </div>
	              <div class="button-container">
	                <button><span>Go</span></button>
	              </div>
	              <div style="margin:auto;width:50%;text-align:center !important;">
	              <div style="padding-bottom:20px;margin-bottom:20px;text-align:center !important;" class="footer"><div class="toggle" style="cursor:pointer;color:#32AED1;font-size:16px;font-weight:700;text-decoration:underline;text-align:center;">Have an Account? Login</div></div>
	              </div>
	            </form>
	          </div>
	          <div class="card alt">
	            <div class="toggle"></div>
	            <h1 class="title">Login
	              <div class="close"></div>
	            </h1>
	            <form id="login" method="POST" action="/login">
	              <div class="input-container">
	                <input type="#{type}" id="#{label}" name="username" required="required"/>
	                <label for="#{label}">Username</label>
	                <div class="bar"></div>
	              </div>
	              <div class="input-container">
	                <input type="password" id="#{label}" name="password" required="required"/>
	                <label for="#{label}">Password</label>
	                <div class="bar"></div>
	              </div>
	              <div class="input-container">
	                <input type="hidden" id="#{label}" required="required"/>
	                <label for="#{label}"></label>
	                <div class="bar"></div>
	              </div>
	              <div class="button-container">
	                <button><span>Next</span></button>
	              </div>
	            </form>
	          </div>
	        </div>
	        <!-- End Import -->
	      <br>
	    </div>
	  </div>
	</div>
</div>


<script>
  
	$('.toggle').on('click', function() {
	  $('.container').stop().addClass('active');
	});

	$('.close').on('click', function() {
	  $('.container').stop().removeClass('active');
	});

</script>