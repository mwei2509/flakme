<div >
  <%if current_user%>
  	<div style="margin-top:100px; height:60px;line-height:50px;padding:5px;padding-bottom:15px;text-align:center;" class="container alert alert-success alert-dismissable">
	  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
	  Nice to see you, <strong><%= current_user.username%></strong>
	    <div style="margin-top:100px;text-align:center;bottom:0 !important;top:0 !important;" class="main">
    <div></div>
	<a class="action visit btn btn-signup" target="_blank" href="/chatrooms">View / Create a Group <i class="fa fa-plus" aria-hidden="true"></i></a>
    <h1>Select a Group to Start Chatting</h1>
    <p style="text-align:center;"><img src="data:image/svg+xml;utf8;base64," width="200" height="200" /></p>
  </div>
	</div>
  <% else %>
  	<div style="text-align:center !important;" class="alert alert-success alert-dismissable">
	  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
	  <strong>Sign up or log in, </strong>then create or join a group to start chatting!
	</div>
	<div style="margin-top:100px;margin:auto;width:50%;">
		    <div class="card"></div>
		    <div class="card">
		  		<%= form_for(User.new, url: login_path) do |f| %>
		      	<div style="margin:auto;width:50%;text-align:left;"><%=f.label :username%></div>
			    	<div class="input-group">
			        	<span class="input-group-addon">@</span>
			        	<%= f.text_field :username, class: "form-control formbox"%>
			      	</div>
			      	<div style="margin:auto; width:50%;padding-top:10px; text-align;left;" class="actions">
			        	<%= f.submit "log in", class: "btn btn-signup" %>
			      	</div>
		    	<% end %>
		    </div>
	</div>
	<div style="margin-top:40px; text-align:center">Don't have an account? Create a username here: 
		<a class="action visit btn btn-signup" target="_blank" href="/signup"><i class="fa fa-plus" aria-hidden="true"></i>
		<span class="text">Join Chat</span>
		</a>
	</div>
	<div style="padding-top:100px;margin:auto;width:75%;">
		<ul id="chatroom-index">
		    <% if @chatrooms.any? %>
		        <li><%= render @chatrooms %></li>
		    <%else %>
				<p>Be the first one to make a chatroom!</p>
			<% end %>
		</ul>			
	</div>	    		
  <%end%>
</div>


<script>
  
	$('.toggle').on('click', function() {
	  $('.container').stop().addClass('active');
	});

	$('.close').on('click', function() {
	  $('.container').stop().removeClass('active');
	});

</script>